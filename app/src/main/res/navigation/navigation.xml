<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.finaltask.fragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_productsList"
            app:destination="@id/productsList" />
    </fragment>
    <fragment
        android:id="@+id/productsList"
        android:name="com.example.finaltask.fragments.ProductsList"
        android:label="fragment_products_list"
        tools:layout="@layout/fragment_products_list" />
</navigation>